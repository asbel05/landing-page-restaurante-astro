---
// Layout.astro
const { title, description = "Food Made Good - Una experiencia culinaria inolvidable con sabores aut√©nticos y ingredientes frescos."} = Astro.props;

import "bootstrap/dist/css/bootstrap.min.css";
import "bootstrap-icons/font/bootstrap-icons.css";
import "aos/dist/aos.css";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <title>{title}</title>

    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet"/>

    <style is:global>
      :root {
        --primary-color: #4a1763;
        --secondary-color: #ad821c;
        --text-color: #333;
        --light-text: #6c757d;
        --light-bg: #f8f9fa;
      }

      html, body {
        font-family: "Poppins", sans-serif;
        color: var(--text-color);
        overflow-x: hidden;
        margin: 0;
        padding: 0;
        width: 100%;
      }

      h1,
      h2,
      h3,
      h4,
      h5 {
        font-family: "Playfair Display", serif;
      }

      .section-padding {
        padding: 5rem 0;
      }

      .section-title {
        margin-bottom: 3rem;
        text-align: center;
      }

      .text-primary {
        color: var(--primary-color) !important;
      }

      .bg-primary {
        background-color: var(--primary-color) !important;
      }

      .btn-custom {
        border: none;
        border-radius: 30px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
      }

      .btn-custom::after {
        content: "";
        position: absolute;
        top: 50%;
        left: 50%;
        width: 300%;
        height: 300%;
        background: rgba(255, 255, 255, 0.2);
        transform: translate(-25%, -75%) scale(0);
        border-radius: 50%;
        transition: transform 0.5s ease;
      }

      .btn-custom:hover::after {
        transform: translate(-50%, -50%) scale(1);
      }

      .btn-custom.btn-primary {
        background-color: var(--primary-color);
        color: white;
      }

      .btn-custom.btn-primary:hover {
        background-color: #5a1c7a;
        box-shadow: 0 4px 15px rgba(124, 40, 167, 0.4);
      }

      .btn-custom.btn-secondary {
        background-color: transparent;
        border: 2px solid white;
        color: white;
      }

      .btn-custom.btn-secondary:hover {
        background-color: rgba(255, 255, 255, 0.1);
        border-color: var(--primary-color);
        color: var(--primary-color);
        box-shadow: 0 4px 15px rgba(255, 255, 255, 0.2);
      }

      @media (max-width: 768px) {
        .btn-custom {
          font-size: 0.9rem;
          padding: 0.5rem 1.5rem;
        }
      }
    </style>
  </head>
  <body>
    <slot />

    <client:only>
      <script>
        import "bootstrap/dist/js/bootstrap.bundle.min.js";
        // @ts-ignore
        import AOS from "aos";
        AOS.init({
          once: true
        });
      </script>
    </client:only>
  </body>
</html>
